{% for space in sportSpaces %}
<tr>
    <td>{{ space.idSportSpace }}</td>
    <td>{{ space.name }}</td>
    <td>{{ space.type|capitalize }}</td>
    <td>{{ space.location ?? 'N/A' }}</td>
    <td>{{ space.phone ?? 'N/A' }}</td>
    <td>
        <span class="badge bg-{{ space.availability ? 'success' : 'danger' }}">
            {{ space.availability ? 'Available' : 'Unavailable' }}
        </span>
    </td>
    <td>
        <a href="{{ path('updateSportSpace', {'id': space.idSportSpace}) }}" class="btn btn-sm btn-warning">Edit</a>
        <form method="post" action="{{ path('delete_sportspace', {'id': space.idSportSpace}) }}" style="display:inline">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-sm btn-danger delete-btn">Delete</button>
        </form>
    </td>
</tr>
{% else %}
<tr class="no-results">
    <td colspan="7" class="text-center">No sport spaces found</td>
</tr>
{% endfor %}