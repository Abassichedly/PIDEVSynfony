        <div class="col-md-6">
            {{ form_row(form.date) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.time) }}
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            {{ form_row(form.duration) }}
        </div>
        <div class="col-md-6">
